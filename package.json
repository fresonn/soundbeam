{
  "name": "soundbeam",
  "version": "0.0.2",
  "description": "Canvas based audio player",
  "main": "./dist/cjs/soundbeam.cjs",
  "module": "./dist/esm/soundbeam.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/esm/soundbeam.js",
      "require": "./dist/cjs/soundbeam.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "rollup -c -w --bundleConfigAsCjs",
    "serve": "serve -p 4000 -L",
    "dev": "conc \"npm:serve\" \"npm:watch\"",
    "prebuild": "rm -rf dist",
    "build": "rollup -c --bundleConfigAsCjs",
    "pub": "npm publish --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fresonn/soundbeam"
  },
  "keywords": [
    "audio",
    "player",
    "browser"
  ],
  "author": "fresonn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fresonn/soundbeam/issues"
  },
  "homepage": "https://github.com/fresonn/soundbeam#readme",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/howler": "^2.2.11",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0",
    "rollup": "^4.6.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "howler": "^2.2.4"
  }
}
